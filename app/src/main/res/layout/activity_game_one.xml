<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".view.activitys.GameOneActivity">

    <ImageView
        android:id="@+id/imageViewSnakeBackground"
        android:layout_width="0dp"
        android:layout_height="@dimen/pic_size"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icon_snake_round" />

    <TextView
        android:id="@+id/textViewGameSnake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/snake"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPointsSnake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonConnectSnake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/connect"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonCloseSnake"
        app:layout_constraintStart_toEndOf="@+id/textViewGameSnake"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonCloseSnake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/icon_close_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonUpSnake"
        android:layout_width="@dimen/game_button"
        android:layout_height="@dimen/game_button"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="120dp"
        android:src="@drawable/icon_up_dark"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonDownSnake"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonLeftSnake"
        android:layout_width="@dimen/game_button"
        android:layout_height="@dimen/game_button"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/icon_left_dark"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonDownSnake"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonDownSnake" />

    <ImageButton
        android:id="@+id/imageButtonRightSnake"
        android:layout_width="@dimen/game_button"
        android:layout_height="@dimen/game_button"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/icon_right_dark"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonDownSnake"
        app:layout_constraintStart_toEndOf="@+id/imageButtonDownSnake" />

    <ImageButton
        android:id="@+id/imageButtonDownSnake"
        android:layout_width="@dimen/game_button"
        android:layout_height="@dimen/game_button"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/icon_down_dark"
        app:layout_constraintBottom_toTopOf="@+id/textViewPointsSnake"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>